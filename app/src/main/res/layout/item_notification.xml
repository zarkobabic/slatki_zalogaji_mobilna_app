<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginVertical="30dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/pink">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_black"
            android:paddingTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="Vasa narudzbina"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@color/pink"/>

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/notificationAllItemsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_light"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="All items placeholder"
            android:textSize="18sp"
            android:paddingStart="30dp"
            android:textColor="@color/black"
            android:background="@color/pink"/>

        <TextView
            android:id="@+id/notificationSuccessTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_black"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Success placeholder"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@color/pink"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>