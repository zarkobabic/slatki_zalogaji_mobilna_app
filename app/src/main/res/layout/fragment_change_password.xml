<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="650dp"
    android:background="@color/customRed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/customRed"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promena lozinke"
            android:textSize="65dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/outfit_bold"
            android:layout_gravity="center" />
        <View
            android:layout_width="200dp"
            android:layout_height="5dp"
            android:background="@color/lightOrange"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stara lozinka"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="30dp"
            android:textStyle="bold"
            android:textColor="@color/lightOrange"
            android:fontFamily="@font/outfit_bold"
            android:gravity="start"/>
        <EditText
            android:id="@+id/oldPassword"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/input_background"
            android:elevation="3dp"
            android:ems="10"
            android:fontFamily="@font/outfit_regular"
            android:hint="Unesite staru lozinku"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:lineSpacingExtra="34sp"
            android:padding="13dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nova loznika"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:textStyle="bold"
            android:textColor="@color/lightOrange"
            android:fontFamily="@font/outfit_bold"
            android:gravity="start"/>
        <EditText
            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/input_background"
            android:elevation="3dp"
            android:ems="10"
            android:fontFamily="@font/outfit_regular"
            android:hint="Unesite novu lozinku"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:lineSpacingExtra="34sp"
            android:padding="13dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Potvrda nove lozinke"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:textStyle="bold"
            android:textColor="@color/lightOrange"
            android:fontFamily="@font/outfit_bold"
            android:gravity="start"/>
        <EditText
            android:id="@+id/newPasswordConfirmed"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/input_background"
            android:elevation="3dp"
            android:ems="10"
            android:inputType="textPassword"
            android:fontFamily="@font/outfit_regular"
            android:hint="Unesite ponovo novu lozinku"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="34sp"
            android:padding="13dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/outfit_regular"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingVertical="20dp"
            android:paddingTop="40dp"
            android:text="Promeni lozinku"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:layout_marginBottom="50dp"
            android:layout_marginHorizontal="30dp"
            android:textStyle="bold"
            android:textColor="@color/lightOrange"
            android:fontFamily="@font/outfit_bold"
            android:gravity="start"/>


    </LinearLayout>
</ScrollView>